{
    
    "express": {
        "view cache": false,
        "view engine": "hbs",
        "views": "path:./views/templates/pages"
    },

    "view engines": {
        "hbs": {
            "module": "express-handlebars",
            "isCustom": "true",
            "renderer": {
                "arguments": [
                    {
                    	"defaultLayout" : "../../views/templates/layouts/hbs/main",
                    	"partialsDir": ["./views/templates/hbs/partials"],
                    	"extname": ".hbs",
                    	"i18n" : "config:i18n"
                    }
                ]
            }
        }
    },
        
    "middleware": {

        "static": {
            "module": {
                "arguments": [ "path:./public" ]
            }
        },

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./views",
                    "path:./.build",
                    {
                        
                        "template": {
                            "module": "construx-dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates"
                        },
                        
                        
                        "css": {
                            "module": "construx-sass",
                            "files": "/css/**/*.css"
                        },
                        
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    },

    "sites": {
        "gumtree.co.za": {
            "name": "Gumtree ZA",            
            "locale": "en_ZA",            
            "hostname": "gumtree.co.za"
        }
    }
    
}
