{
	"cards": {
		"trendingCard": {
			"queryEndpoint": "BAPI.endpoints.trendingSearch",
			"queryParameters": {
				"offset": "0",
				"limit": "48",
				"minResults": "48",
				"geo": "${UserProvided}",
				"withPicsOnly": true
			},
			"templateConfig": {
				"viewMoreFilterIncrement": 16,
				"clientJsHandlerCssClass": "use-isotope-handler",
				"showSellers": false,
				"showFavorites": true
			}
		},

		"galleryCard": {
			"queryEndpoint": "BAPI.endpoints.homepageGallery",
			"queryParameters": {
				"offset": "0",
				"limit": "16"
			},
			"templateConfig": {
				"viewMorePageSize": 16,
				"clientJsHandlerCssClass": "use-isotope-handler",
				"showSellers": false,
				"showFavorites": true
			}
		},
		"similarCardTab": {
			"templateConfig": {
				"viewMorePageSize": 6,
				"clientJsHandlerCssClass": "use-isotope-handler",
				"showSellers": false,
				"showFavorites": true
			}
		},
		"sellerOtherCardTab": {
			"templateConfig": {
				"viewMorePageSize": 6,
				"clientJsHandlerCssClass": "use-isotope-handler",
				"showSellers": false,
				"showFavorites": true
			}
		}
	},
	"cardsByPage": {
		"homePage": [
			"trendingCard",
			"galleryCard"
		],
		"viewPage": [
			"similarCardTab",
			"sellerOtherCardTab"
		]
	}
}
