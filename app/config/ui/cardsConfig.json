{
	"cards": {
		"trendingCard": {
			"queryEndpoint": "BAPI.endpoints.trendingSearch",
			"queryParameters": {
				"offset": "0",
				"limit": "48",
				"minResults": "48",
				"geo": "${UserProvided}",
				"withPicsOnly": true
			},
			"templateConfig": {
				"viewMoreFilterIncrement": 16,
				"clientJsHandlerCssClass": "use-isotope-handler",
				"showFavorites": true,
				"showReplies": true,
				"showLikes": true,
				"showFeatured": true
			}
		},

		"galleryCard": {
			"queryEndpoint": "BAPI.endpoints.homepageGallery",
			"queryParameters": {
				"offset": "0",
				"limit": "16"
			},
			"templateConfig": {
				"viewMorePageSize": 16,
				"clientJsHandlerCssClass": "use-isotope-handler",
				"showFavorites": true,
				"showReplies": true,
				"showLikes": true,
				"showFeatured": true
			}
		}
	},
	"cardsByPage": {
		"homePage": [
			"trendingCard",
			"galleryCard"
		]
	}
}
