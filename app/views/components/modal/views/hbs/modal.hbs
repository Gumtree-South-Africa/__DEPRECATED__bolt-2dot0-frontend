<div class="modal">
  <div class="modal-overlay"></div>
  <div class="modal-container">
      <div class="modal-close-section">
        <span class="close-text">CLOSE</span>
        <span class="icon-close"></span>
      </div>
      <h1>Change Your Location</h2>
      <div class="modal-info">CITY, NEIGHBORHOOD, OR POSTAL CODE</div>
      <div class="modal-field container">
        <div class="right">
          <span class="icon-placeholder1 btn-icon"></span>
          <span class="icon-placeholder2 btn-icon"></span>
          <div class="clear"></div>
        </div>
        <div class="left">
            <input type="text" class="modal-input"/>
        </div>
        <div class="clear"></div>
    </div>
      <div class="modal-footer">
          {{> (dynamic "button")}}
      </div>
  </div>
</div>
