{{> (base  "footer") }}

{{#partial "footer"}}
	<div class="footer-links clearfix">
		<div class="logo">
	        <a href="{{this.header.homePageUrl}}">
	            <img border="0"  src="{{this.header.baseImageUrl}}{{this.locale}}/logo.png" alt="{{__ "header.country.label"}}"/>
	        </a>
		</div>

		<div>
			<h3>{{{__ "footer.getToKnowUs.title"}}}</h3>
			<ul>
				<li><span class='sudo-link' data-o-uri='{{obfuscateUrl "http://gumtreehelp.com/ie/knowledgebase.php?article=122" }}'>{{{__ "footer.getToKnowUs.about"}}}</span></li>
				<li><span class='sudo-link' data-o-uri='{{obfuscateUrl "http://gumtreehelp.com/ie/knowledgebase.php?article=22" }}'>{{{__ "footer.getToKnowUs.rules"}}}</span></li>
			</ul>
		</div>

	    <div>
	        <h3>{{{__ "footer.explore.title"}}}</h3>
	        <ul>
	            {{!-- Top Searches --}}
	            <li><a href="{{{this.footer.topSearchesLandingPageUrl}}}">{{{__ "footer.explore.topSearches" }}}</a></li>
	            {{!-- Locations --}}
	            <li><a href="http://www.gumtree.ie/pages/locations/">{{{__ "footer.explore.locations" }}}</a></li>
	            <li><a href="http://www.gumtree.ie/pages/">{{{__ "footer.explore.sitemap" }}}</a></li>
	            {{!-- eCG interlinking Page --}}
	            <li><a href="http://www.gumtree.ie/pages/ClassifiedsNetwork/">{{{__ "footer.explore.interlink" }}}</a></li>
	            
			</ul>
	    </div>
	    
		<div class="rightColumn">
			<h3>{{{__ "footer.legalbits.title"}}}</h3>
			<ul>
				<li><span class='sudo-link' data-o-uri="{{{this.footer.obfuscatedTermsAndConditionsURL}}}" data-target="_self">{{{__ "footer.legalbits.terms" }}}</span></li>
				<li><span class='sudo-link' data-o-uri="{{{this.footer.obfuscatedPrivacyPolicyURL}}}" data-target="_self">{{{__ "footer.legalbits.privacy"}}}</span></li>
				<li><span class='sudo-link' data-o-uri="{{{this.footer.obfuscatedCookieRightsURL}}}" data-target="_self">{{{__ "footer.legalbits.cookie"}}}</span></li>
			</ul>
		</div>
	    
		<div class="rightColumn">
			<h3>{{{__ "footer.tips-help.title"}}}</h3>
			<ul>
	            <li><a href="http://gumtreehelp.com/ie/knowledgebase.php">{{{__ "footer.tips-help.helpContact"}}}</a></li>
				<li><span class="sudo-link" data-o-uri='{{obfuscateUrl "http://gumtreehelp.com/ie/knowledgebase.php?article=26"}}'>{{{__ "footer.tips-help.staySafe"}}}</span></li>
			</ul>
		</div>
	</div>

	<div class="social-links">{{> (dynamic "socialMediaLinks") }}</div>
	<div class="cpyrt">{{{__ "footer.copyright"}}}</div>
{{/partial}}
