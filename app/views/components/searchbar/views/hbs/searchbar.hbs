{{#unless this.content.disableSearchbar}}
    <div class="searchbar">
        <section role="search">
            <div class="wrap">
                <form action='{{this.header.searchPageUrl}}' class="has-location-{{this.header.navigationConfig.locationSelection}}"
                        data-instant-search="{{this.header.navigationConfig.instantSearch}}"
                        data-clear-searches-message='{{i18n "header.clear-recent-searches"}}'
                        data-saved-search="{{this.header.navigationConfig.savedSearch}}"
                        data-auto-complete="{{this.header.navigationConfig.autoComplete}}"
                        data-auto-complete-api="{{this.header.autoCompleteUrl}}">
                    <fieldset>
                        {{!-------------- keyword --------------}}
                        {{> (include "searchbar" "keyword") }}       
                        {{!-------------- /keyword --------------}}

                        {{!-------------- categories --------------}}
                        {{> (include "searchbar" "categories") }}
                        {{!-------------- /categories --------------}}

                        {{!-------------- locations --------------}}
                        {{> (include "searchbar" "locations") }}
                        {{!-------------- /locations --------------}}

                        {{!-------------- button --------------}}
                        {{> (include "searchbar" "button") }}
                        {{!-------------- /button --------------}}
                    </fieldset>

                    {{!-------------- geoLocator --------------}}
                    {{> (include "searchbar" "geoLocator") }}
                    {{!-------------- /geoLocator --------------}}

                    {{!-------------- existing search --------------}}
                    {{> (include "searchbar" "hiddenFields") }}
                    {{!-------------- /existing search --------------}}

                </form>
            </div>
        </section>
    </div>


    {{#partial "explorer-searchbar-polyfill"}}
        <!--[if (lte IE 9)&!(IEMobile)]>
        <script src="{{model.footer.baseJSUrl}}/common/polyfills/placeholder.js"></script>
        <![endif]-->
    {{/partial}}


{{/unless}}