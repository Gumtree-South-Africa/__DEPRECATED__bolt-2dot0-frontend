{{!-- Place code from home/AR/HomePage.html here --}}

{{#partial "locationContainer"}}
<div class="hp-location-wrapper">
    {{#block "HomePageSubTitle"}}{{/block}}

    {{#block "locationMap"}}{{/block}}

    {{!-- We show the map only for tablet and desktop, not for mobile. For mobile, we show the locations --}}
    {{#block "popularLocationsContainer"}}
        {{#block "popularLocations"}}{{/block}}
    {{/block}}

    {{#block "LocationStates"}}
    <div class="hp-province-wrapper">
        <h5>{{i18n "home.provinces"}}</h5>
        <ul class="location-list">
            {{#each model.content.LocationFilter.children}}
            <li data-index="{{@index}}">
                <a href="{{this.url}}"><span class="location-name">{{this.localizedName}}</span></a>
            </li>
            {{/each}}
        </ul>
    </div>
    {{/block}}
</div>
<div class="clear"></div>
{{/partial}}

{{#partial "popularLocations"}}
<div class="hp-city-wrapper">
    <h5>{{i18n "home.main-locations"}}</h5>
    <ul class="location-list">
        {{#each model.content.Level2Location.children}}
        <li data-index="{{@index}}">
            <a href="{{this.url}}"><span class="location-name">{{this.localizedName}}</span></a>
        </li>
        {{/each}}
    </ul>
</div>
{{/partial}}

{{#partial "AdBannerHomepg"}}
	{{#block "locationMap_Script"}}
    {{/block}}
{{/partial}}

{{#if model.header.isIncludeContentForMobile}}
    {{#partial "locationAfterCategory"}}
        {{#block "locationContainer"}}{{/block}}
    {{/partial}}
{{else}}
    {{#partial "locationBeforeCategory"}}{{/partial}}
    {{#partial "locationAfterCategory"}}
		{{> locationMapContainer}}
		{{> countryMap}}
        {{> adCarousel}}

		{{#block "locationContainer" ../this}}{{/block}}
        {{#block "carousel"}}{{/block}}
	{{/partial}}
{{/if}}

{{> homepage-base}}


