{{#partial "content"}}

    <form action="" method="post" enctype="multipart/form-data">
        <fieldset>
            <label for="name">Upload Pictures</label>
            <input type="file" name="pic" accept="image/*">
            <br />
            <label for="description">Description:</label>
            <textarea id="description" name="description" placeholder="Enter a short description about what you are selling"></textarea>
            <br />
            <label for="description">Category:</label>
            <select>
                {{#each this.category.children}}
                    <option>{{this.localizedName}}</option>
                {{/each}}
            </select>
            <br />
            <label for="name">Price:</label>
            <input type="text" id="price" name="price" placeholder="Enter price" />
            <br />
            <label for="name">Share on Facebook:</label>
            <input type="checkbox" name="sharefb" />
            <br />
            <input type="submit" value="Sell Item" />
        </fieldset>
    </form>

{{/partial}}