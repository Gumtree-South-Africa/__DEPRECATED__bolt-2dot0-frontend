{
	"type": "object",
	"properties": {
		"email": {
			"type": "string",
			"pattern": "^(([A-Za-z0-9-]+_+)|([A-Za-z0-9-]+\\-+)|([A-Za-z0-9-]+\\.+)|([A-Za-z0-9-]+\\++))*[A-Za-z0-9-_]+@((\\w+\\-+)|(\\w+\\.))*\\w{1,63}\\.[a-zA-Z]{2,6}$",
			"minLength": 6,
			"maxLength": 256
		},
		"facebookId": {
			"type": "string"
		},
		"facebookToken": {
			"type": "string"
		},
		"optInMarketing": {
			"required": true,
			"type": "boolean"
		},
		"agreeTerms": {
			"required": true,
			"type": "boolean"
		}
	},
	"required": [
		"email",
		"facebookId",
		"facebookToken"
	]
}
