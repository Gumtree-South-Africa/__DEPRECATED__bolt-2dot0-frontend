{
	"$schema": "http://json-schema.org/draft-04/schema",
	"type": "object",
	"required": true,
	"properties": {
		"ads": {
			"type": "array",
			"required": true,
			"minItems": 1,
			"maxItems": 1,
			"items": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string",
						"maxLength": 100
					},
					"location": {
						"type": "object",
						"properties": {
							"address": {
								"type": "string"
							},
							"latitude": {
								"type": "number",
								"required": true
							},
							"longitude": {
								"type": "number",
								"required": true
							}
						}
					},
					"price": {
						"type": "object",
						"properties": {
							"currency": {
								"type": "string",
								"required": true,
								"enum": [
									"USD",
									"MXN"
								]
							},
							"amount": {
								"type": "number",
								"required": true
							}
						}
					},
					"imageUrls": {
						"type": "array",
						"minItems": 1,
						"required": true,
						"items": {
							"type": "string"
						}
					},
					"categoryAttributes": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"name": { "type": "string" },
								"required": [
									"name",
									"value"
								]
							}
						}
					}
				}
			}
		}
	}
}
