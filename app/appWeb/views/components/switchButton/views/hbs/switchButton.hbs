<div class="toggleswitch {{#if this.enabled}} active{{/if}}">
	<div class="container">
        <input id="switchBtn" type="checkbox" {{#if this.formContent.checked}}class="checked"{{else}}{{/if}} />
		<span class="slider"></span><!-- button -->
		<span class="on classic">{{i18n this.formContent.sharefbTextYes}}</span>	<!-- gutter -->
		<span class="off classic">{{i18n this.formContent.sharefbTextNo}}</span>
        <input type="hidden" name="switch" value="{{#if this.formContent.checked}}{{this.formContent.switch}}{{else}}NO{{/if}}" />
	</div>
</div>
