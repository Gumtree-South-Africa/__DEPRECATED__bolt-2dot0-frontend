<div id="form-map-overlay" class="form-map-overlay"></div>
<div id="form-map-component" class="form-map-component" data-google-map="{{this.googleMap}}" data-location-ad="{{this.locationLatLong}}">
    <div id="close-modal" class="close-modal">
        <span class="close-text">{{i18n "feature.legend.close"}}</span>
        <img class="close-icon-small" src="/public/icons/close.svg" alt="">
    </div>
    <div class="title">{{i18n "postad.location.title"}} <span class="errorMessageMap"></span></div>
    <div class="map-form">
        <div class="search-location">
            <input id='autocompleteTextBox' class='textbox' type='search' placeholder='{{i18n "postad.location.placeholder"}}'></input>
            <button id="setCurrentLocationButton" class="setLocationButton" type="button">
                <img src="/public/icons/map/location-arrow.svg" alt="">
                 {{i18n "postad.location.setLocation"}}</button>
        </div>
        <div class="map-component">
            <div class="map-plugin">
                <div id="map"></div>
                <div id="map-overlay">
                    {{i18n "postad.location.searching"}}
                </div>
                <div class="google-maps">
                    {{#if this.googleMapAuth.googleMapKey}}
                		<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&key={{this.googleMapAuth.googleMapKey}}&channel=bt_mx&libraries=places&language={{this.lang}}"></script>
                    {{else}}
                		<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&client=gme-marktplaats&channel=bt_mx&libraries=places&language={{this.lang}}"></script>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="location-settings">
            <div class="description">
                <button id="confirmLocationButton" class="confirmLocationButton" type="button">
                 {{i18n "postad.location.confirmButton"}}</button>

                <div class="only-desktop">
                    {{i18n "postad.location.instructions.desktop"}}
                </div>
                <div class="only-mobile">
                    {{i18n "postad.location.instructions.mobile"}}
                </div>
            </div>

            <div class="checkbox">
                <div class="toggle">
                    <input id="switchRangeMarker" type="checkbox" class="toggle-input">
                    <label for="switchRangeMarker" class="toggle-label"></label>
                </div>
                <div class="label">
                    <span>{{i18n "postad.location.uselocation"}}</span><br>
                    {{i18n "postad.location.uselocation.instructions" }}
                </div>
            </div>
        </div>
    </div>
</div>
