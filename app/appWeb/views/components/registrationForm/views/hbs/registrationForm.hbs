<div id="registration-form" class="registration-form">
	<div class="title">
        {{i18n "registrationForm.registerWithEmail"}}
	</div>
    <form id="registration-form" method="POST" action="#">
        <input type="hidden" value="{{this.redirectUrl}}" name="redirect-url" id="redirect-url">
		<div class="error-message">
			<div id="invalid-email" class="invalid-email hidden">
                {{i18n "registrationForm.invalidEmail"}}
			</div>
			<div id="terms-error" class="accept-terms hidden">
                {{i18n "registrationForm.acceptTerms"}}
			</div>
		</div>
        <div class="input-wrapper email">
			<input id="email-input" placeholder="{{i18n "registrationForm.email"}}" type="text" name="email-address" class="email-address">
        </div>
        <div class="input-wrapper password">
            <label for="password-one" class="password-length-label">
                ({{i18n "pass.too.long"}})
            </label>
			<input id="password-one" placeholder="{{i18n "postad.contact.password"}}" type="password" name="password-one"
				   class="password password-one">
        </div>
        <div class="input-wrapper password-two">
			<input id="password-two" placeholder="{{i18n "postad.contact.password"}}" type="password" name="password-two"
				   class="password password-two">
        </div>
        {{> (dynamic "termsAndConditions") }}
        <button id="registration-submit-button" class="registration-submit-button" disabled>{{i18n "register.continue"}}</button>
        <div id="general-error" class="general-error hidden">
            {{i18n "postad.image.upload.failure.$$"}}
        </div>
	</form>
</div>
<div id="registration-success" class="registration-success hidden">
    {{i18n "register.continue-message"}}
</div>
