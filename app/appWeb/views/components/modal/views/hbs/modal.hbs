<div id="locationModal" class="modal modal-cp hiddenElt">
    {{#partial "default-gmaps"}}
        {{#if this.googleMapAuth.googleMapKey}}
			<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&key={{this.googleMapAuth.googleMapKey}}&channel=bt_mx&libraries=places&language={{this.lang}}"></script>
        {{else}}
			<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&client=gme-marktplaats&channel=bt_mx&libraries=places&language={{this.lang}}"></script>
        {{/if}}
    {{/partial}}
	<div class="modal-overlay"></div>
	<div class="modal-container">
		<div class="modal-close-section">
			<div class="modal-closearea">
				<span class="close-text">{{i18n "modal.close"}}</span>
				<span class="icon-close"></span>
			</div>
		</div>

        {{!-- this should change depending on the modal content --}}
		<h3 class="modal-header-message">{{i18n "modal.message"}}</h3>
			<div class="modal-info">{{i18n "modal.info"}}</div>
			<div class="modal-field container">
				<div class="right">
					<span class="icon-location-v2 btn-icon"></span>
					<div class="clear"></div>
				</div>
				<div class="left">
					<input type="text" id="modal-location" class="modal-input" placeholder="{{i18n 'modal.placeholderText'}}"/>
				</div>
				<div class="clear"></div>
				<div id="autocompleteField" class="hiddenElt"></div>
			</div>
            {{#if this.isLocationMobile}}
				<div class="change-loc">{{i18n "modal.locationAutoMobile"}}</div>
            {{else}}
				<div class="change-loc">{{i18n "modal.locationAutoDesktop"}}</div>
            {{/if}}

			<div class="modal-footer">
                {{> (dynamic "button") i18nPath="modal.buttonText" hideIcon=true iconName="icon-post" extraClasses='login-button confirm-button'}}
			</div>
            {{!-- end of modal content --}}
	</div>
</div>
