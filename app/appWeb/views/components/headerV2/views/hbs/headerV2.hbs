<div class="headerV2">
    <div class="mobile-only mobile-menu icon-menu">
    </div>
    <div class="logo"></div>
    <div class="mobile-only app-icon icon-android">
    </div>
    {{#unless this.header.distractionFree}}
        <div class="left-items">
            {{#if this.header.username}}
                <div class="messages">
                    {{i18n "header.userDropdown.messages"}}
                </div>
            {{/if}}
            <div class="browse">
                <div class="item-text">
                    {{i18n "header.catDropdown.browse"}}
                </div>
                <ul class="js-cat-dropdown menu-dropdown hidden">
                    {{#each this.categoryDropdown.children}}
                        <li class="menu-item">{{this.localizedName}}<span class="item-secondary-text">(TBD)</span></li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="right-items">
            <div class="help float-right">
                {{i18n "header.help"}}
            </div>
            <div class="my-ads float-right">
                {{i18n "header.myAds"}}
            </div>
            <div class="profile {{#unless this.header.username}}normal-pad-top {{/unless}}float-right">
                {{#if this.header.username}}
                    <div class="profile-icon
                    {{#if this.header.username}}
                    profile-picture
                    {{else}}
                    icon-header-profile-out
                    {{/if}}">

                    </div>
                    {{#if this.header.userEmail}}
                        Hi, {{this.header.profileName}}!
                    {{else}}
                        {{i18n "header.menu.my.gumtree"}}
                    {{/if}}
                {{else}}
                    {{i18n "header.menu.my.gumtree"}}
                {{/if}}
                <ul class="js-profile-menu cat-dropdown profile-menu hidden">
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                    <li>Hello</li>
                </ul>
            </div>

            {{> (dynamic "button")}}
        </div>
    {{/unless}}
</div>


