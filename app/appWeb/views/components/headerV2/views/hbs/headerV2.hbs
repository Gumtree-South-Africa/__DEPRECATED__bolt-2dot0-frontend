{{> (dynamic "hamburgerMenu")}}
<div class="headerV2">
    <a href="/">
        <div class="logo"></div>
    </a>
    {{#unless this.header.distractionFree}}
        <div id="js-hamburger-icon" class="mobile-only mobile-menu icon-menu">
        </div>
        <a id='js-deeplink' href="https://go.vivanunc.io/a/key_live_ognT7X8BUKIBbFhWnhI5KlnhyxcKDuU4?%24deeplink_path=home">
            <div class="mobile-only app-icon {{#if header.isIphone}}icon-sms-2 {{/if}}icon-android"></div>
        </a>
        <div class="left-items">
            {{#if this.header.username}}
                <a href="messages-TBD">
                    <div class="messages icon-messages">
                        <div class="number-messages">
                            10
                        </div>
                    </div>
                </a>
            {{/if}}
            <div id='js-browse-dropdown' class="browse">
                <div id='js-browse-item-text' class="item-text">
                    {{i18n "header.catDropdown.browse"}}
                    <div id="js-browse-header-item-icon" class="header-item-icon icon-down"></div>
                </div>
                <ul id="js-cat-dropdown" class="menu-dropdown hidden">
                    {{#each this.categoryDropdown.children}}

                            <li class="menu-item">
                                <a href="{{this.localizedName}}-TBD" class="link-item">
                                    <span class="item-primary-text">{{this.localizedName}}</span>
                                    <span class="item-secondary-text">(tbd)</span>
                                </a>
                            </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="right-items">
            <a href="help-TBD">
                <div class="help right-item">
                    {{i18n "header.help"}}
                </div>
            </a>
            {{#if this.header.username}}
                <a href="my-ads-TBD">
                    <div class="my-ads right-item">
                        {{i18n "header.myAds"}}
                    </div>
                </a>
            {{/if}}
            <div class="profile right-item">
                <div id="js-profile-item-text" class="item-text">
                    <div class="profile-icon
                    {{#if this.header.username}}
                    profile-picture
                    {{else}}
                    icon-header-profile-out
                    {{/if}}">
                    </div>
                    {{#if this.header.userEmail}}
                        {{i18n "header.userDropdown.title"}}{{this.header.profileName}}!
                        <div id="js-profile-header-item-icon" class="header-item-icon icon-down"></div>
                    {{else}}
                        {{i18n "header.menu.my.gumtree"}}
                        <div id="js-profile-header-item-icon" class="header-item-icon icon-down"></div>
                    {{/if}}
                </div>
                <ul id="js-profile-dropdown" class="menu-dropdown hidden">
                    <li class="menu-item">
                        <a href="favorites-TBD" class="link-item">
                            <div class="item-icon icon-favorites icon-favorites"></div>
                            <div class="profile-item-text">{{i18n "header.userDropdown.favorites"}}</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="messages-TBD" class="link-item">
                            <div class="item-icon icon-chat"></div>
                            <div class="profile-item-text">{{i18n "header.userDropdown.messages"}}</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="myAlerts-TBD" class="link-item">
                            <div class="item-icon icon-alerts"></div>
                            <div class="profile-item-text">{{i18n "header.userDropdown.myAlerts"}}</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="myProfile-TBD" class="link-item">
                            <div class="item-icon icon-photo-library-3"></div>
                            <div class="profile-item-text">{{i18n "header.userDropdown.myProfile"}}</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="mySettings-TBD" class="link-item">
                            <div class="item-icon icon-my-settings"></div>
                            <div class="profile-item-text">{{i18n "header.userDropdown.mySettings"}}</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="promoteMyAds-TBD" class="link-item">
                            <div class="item-icon icon-promote-1"></div>
                            <div class="profile-item-text">{{i18n "header.userDropdown.promoteMyAds"}}</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a href="pricingGuide-TBD" class="link-item">
                            <div class="item-icon icon-pricing-guide"></div>
                            <div class="profile-item-text">{{i18n "header.userDropdown.pricingGuide"}}</div>
                        </a>
                    </li>
                    {{#if this.header.username}}
                        <li class="menu-item">
                            <a href="logout-TBD" class="link-item">
                                <div class="item-icon icon-logout-1"></div>
                                <div class="profile-item-text">{{i18n "header.userDropdown.logout"}}</div>
                            </a>
                        </li>
                    {{else}}
                        {{> (dynamic "button") i18nPath="login.signin-button" buttonLink="/login-TBD" hideIcon=true extraClasses='login-button'}}
                    {{/if}}
                </ul>
            </div>

            {{> (dynamic "button") extraClasses='post-ad-button' buttonLink="/quickpost" i18nPath="header.postAd"}}

        </div>
    {{/unless}}
</div>


