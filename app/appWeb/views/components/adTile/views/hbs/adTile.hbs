{{#block "adTile"}}
    {{!-- this.isFeatured --}}
    <span class="inline-block panel {{#if this.features}}featured{{/if}}" style="background-image: url({{this.pictures.0.url}});">
        <span class="featured-bolt icon-featured-white"></span>
        <a href="{{this.seller.soiSeoUrl}}"><span class="inline-block user-photo" style="background-image: url({{this.seller.profileImage}}14.JPG);"></span></a>
        <section class="controls">
            <section class="ad-stats">
                <div class="inline-block icon-heart-white"></div>
                <span class="stat-num">{{this.statistics.favoriteCount}}</span>
                <div class="inline-block icon-messages-white"></div>
                <span class="stat-num">{{this.statistics.replyCount}}</span>
            </section>
            <span class="favorite-btn icon-heart-gray" role="button"></span>
        </section>
        <a class="tile-link"  data-gtm="pc|AdModuleClick|eventLabel|PopularAds" href="{{this.viewSeoUrl}}"></a>
    </span>
{{/block}}
