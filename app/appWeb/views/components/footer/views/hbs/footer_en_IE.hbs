{{> (base  "footer") }}

{{#partial "footer"}}
	<div class="footer-links clearfix">
		<div class="logo">
	        <a href="{{this.header.homePageUrl}}">
	            <img border="0"  src="{{this.header.baseImageUrl}}{{this.locale}}/logo.png" alt="{{i18n "header.country.label"}}"/>
	        </a>
		</div>

		<div>
			<h3>{{{i18n "footer.getToKnowUs.title"}}}</h3>
			<ul>
				<li><span class='sudo-link' data-o-uri='{{obfuscateUrl "http://help.gumtree.ie/IE/articles/en_US/KB_Article/About-Us-Ireland?vgroup1=PKB&c=PKB%3AbasicsIE&vcategory2=aboutIE" }}'>{{{i18n "footer.getToKnowUs.about"}}}</span></li>
				<li><span class='sudo-link' data-o-uri='{{obfuscateUrl "http://help.gumtree.ie/IE/articles/en_US/KB_Article/What-are-the-General-posting-rules-Ireland?vgroup1=PKB&c=PKB%3ApoliciesIE&vcategory2=generalpoliciesIE" }}'>{{{i18n "footer.getToKnowUs.rules"}}}</span></li>
			</ul>
		</div>

	    <div>
	        <h3>{{{i18n "footer.explore.title"}}}</h3>
	        <ul>
	            {{!-- Top Searches --}}
	            <li><a href="{{{this.footer.topSearchesLandingPageUrl}}}">{{{i18n "footer.explore.topSearches" }}}</a></li>
	            {{!-- Locations --}}
	            <li><a href="https://www.gumtree.ie/pages/locations/">{{{i18n "footer.explore.locations" }}}</a></li>
	            <li><a href="https://www.gumtree.ie/pages/">{{{i18n "footer.explore.sitemap" }}}</a></li>
	            {{!-- eCG interlinking Page --}}
	            <li><a href="https://www.gumtree.ie/pages/ClassifiedsNetwork/">{{{i18n "footer.explore.interlink" }}}</a></li>

			</ul>
	    </div>

		<div class="rightColumn">
			<h3>{{{i18n "footer.legalbits.title"}}}</h3>
			<ul>
				<li><span class='sudo-link' data-o-uri='{{obfuscateUrl "https://help.gumtree.ie/IE/Terms_of_Use_IE"}}' data-target="_self">{{{i18n "footer.legalbits.terms" }}}</span></li>
				<li><span class='sudo-link' data-o-uri='{{obfuscateUrl "https://help.gumtree.ie/IE/Privacy_IE"}}' data-target="_self">{{{i18n "footer.legalbits.privacy"}}}</span></li>
				<li><span class='sudo-link' data-o-uri='{{obfuscateUrl "http://help.gumtree.ie/IE/articles/en_US/KB_Article/Cookie-Policy-Ireland?vgroup1=PKB&c=PKB%3ApoliciesIE&vcategory2=generalpoliciesIE" }}'>{{{i18n "footer.legalbits.cookie"}}}</span></li>
			</ul>
		</div>

		<div class="rightColumn">
			<h3>{{{i18n "footer.tips-help.title"}}}</h3>
			<ul>
	            <li><a href="https://gumtreehelp.com/ie/knowledgebase.php">{{{i18n "footer.tips-help.helpContact"}}}</a></li>
				<li><span class="sudo-link" data-o-uri='{{obfuscateUrl "https://gumtreehelp.com/ie/knowledgebase.php?article=26"}}'>{{{i18n "footer.tips-help.staySafe"}}}</span></li>
			</ul>
		</div>
	</div>

	<div class="social-links">{{> (dynamic "socialMediaLinks") }}</div>
	<div class="cpyrt">{{{i18n "footer.copyright"}}}</div>
{{/partial}}
