{{#block "searchbarV2"}}
    <section id="search-controls" class="search-controls">
		<div id="search-bar" class="search-bar">
			<div role="button" class="close-search icon-close"></div>
            <div class="loc-arrow-icon icon-location-arrow-blue"></div>
            <form method="GET" action="/search.html?page=1">
                <div class="search-wrap">
                    <div class="search-textbox-container">
                        <input class="search-textbox" type="text" name="q" autocomplete="off" placeholder="{{i18n "homepage.searchbar.lookingFor"}}"/>
                    </div>
                    <div class="mobile-location-area"></div>
                    <div class="divider"></div>
                    <div class="location-link">
						<span class="search-loc-icon icon-location-marker"></span>
						<span class="location-text">{{#if this.locationlatlong.localizedName}}{{this.locationlatlong.localizedName}}{{else}}{{i18n "location.defaultcity"}}{{/if}}</span>
                    </div>
                    <input type="hidden" name="locId" value="1001">
				</div>
                <div class="search-button-wrap">
                    <button class="search-button" type="submit">
                        <span class="button-content-container">
                            <span class="inner-text">{{i18n "homepage.searchbar.search"}}</span>
                            <span class="icon-search-white"></span>
                        </span>
                    </button>
                </div>
			</form>

        </div>
		<div class="type-ahead-results-wrapper">
			<div id="type-ahead-results" class="type-ahead-results-container">
                <ul></ul>
            </div>
		</div>

		<div id="search-mask" class="search-mask hidden"></div>
    </section>
{{/block}}
