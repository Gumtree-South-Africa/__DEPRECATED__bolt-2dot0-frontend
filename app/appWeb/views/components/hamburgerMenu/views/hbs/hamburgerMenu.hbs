<div id="js-body-overlay" class="body-overlay"></div>
<div class="hamburger-popout hamburger-contents hamburger-closed">
    <div class="menu-container">
        {{> (dynamic "button") buttonLink="/quickpost" i18nPath="header.postAd"}}

        {{#if this.header.profileName}}
            <div class="menu-profile">
                <div class="profile-icon
                    {{#if this.header.username}}
                        {{#if this.header.profilePictureCropUrl}}
                            profile-picture
                        {{else if this.header.smallFbProfileImageUrl}}
                            profile-picture
                        {{else}}
                            icon-header-profile-out
                        {{/if}}
                    {{else}}
                        icon-header-profile-out
                    {{/if}}"
                    {{#if this.header.profilePictureCropUrl}}
                         style="background: url('{{this.header.profilePictureCropUrl}}') no-repeat;
                                 background-size: contain;"
                    {{else if this.header.smallFbProfileImageUrl}}
                         style="background: url('{{this.header.smallFbProfileImageUrl}}') no-repeat;
                                 background-size: contain;"
                    {{/if}}>
                    </div>
                <div class="profile-welcome-text">
                    {{i18n "header.userDropdown.title"}}{{this.header.profileName}}!
                </div>
            </div>
        {{/if}}
        <div id="js-hamburger-browse" class="browse-categories">
            <div id="js-browse-categories" class="category-name">
                <div class="inline-block vertical-align-middle icon-grid-view-1"></div>
                <div class="inline-block vertical-align-middle browse-categories-text">
                    Browse Categories
                </div>
                <div id="js-browse-arrow" class="browse-arrow icon-chevron"></div>
            </div>
            <ul class="l0-categories">
                <li class="hidden">
                    <a href="/allCategories">
                        <div class="category-name">
                            All Categories
                        </div>
                    </a>

                </li>
            </ul>
            <ul class="l1-categories">
                {{#each this.categoryDropdown.children}}
                    <li class="hidden">
                        <a href="{{this.localizedName}}">
                            <div class="category-name">
                                {{this.localizedName}}
                            </div>
                        </a>
                    </li>
                {{/each}}
            </ul>
        </div>
        <div class="profile-information">
            {{> (dynamic "profileMenu")}}
        </div>
    </div>
</div>
