<div id="js-body-overlay" class="body-overlay"></div>
<div id='js-hamburger-menu' class="hamburger-popout hamburger-contents hamburger-closed">
	<div class="menu-container">
        {{> (dynamic "button") hideIcon=false extraClasses='js-hamburger-post js-post-button' iconName='icon-post' buttonLink="/quickpost" i18nPath="header.postAd"}}

        {{#if this.header.profileName}}
			<div class="menu-profile">
				<div class="profile-icon
                    {{#if this.header.username}}
                    {{#if this.header.profilePictureCropUrl}}
                            profile-picture
                        {{else if this.header.smallFbProfileImageUrl}}
                            profile-picture
                        {{else}}
                            icon-header-profile-out
                        {{/if}}
                {{else}}
                        icon-header-profile-out
                    {{/if}}"
                    {{#if this.header.profilePictureCropUrl}}
					 style="background: url('{{this.header.profilePictureCropUrl}}13.JPG') no-repeat;
							 background-size: contain;"
                    {{else if this.header.smallFbProfileImageUrl}}
					 style="background: url('{{this.header.smallFbProfileImageUrl}}') no-repeat;
							 background-size: contain;"
                    {{/if}}>
				</div>
				<div class="profile-welcome-text">
                    {{i18n "header.userDropdown.title"}}{{this.header.profileName}}!
				</div>
			</div>
        {{/if}}
		<div id="js-hamburger-browse" class="browse-categories">
			<div id="js-browse-categories" class="category-name">
				<div class="inline-block vertical-align-middle icon-grid-view-1"></div>
				<div class="inline-block vertical-align-middle browse-categories-text">
                    {{i18n "header.catDropdown.browseCategories"}}
				</div>
				<div id="js-browse-arrow" class="browse-arrow icon-chevron"></div>
			</div>
			<ul class="l0-categories">
				<li class="hidden">
					<div class="category-name">
						<a href="{{this.category._links.[1].href}}">
                            {{this.category.localizedName}}
						</a>
					</div>

				</li>
			</ul>
			<ul class="l1-categories">
                {{#each this.category.children}}
					<li class="hidden">
						<div class="category-name">
							<a href="{{this._links.[1].href}}" title="{{this.localizedName}}" data-id="{{this.id}}">
                                {{this.localizedName}}
							</a>
						</div>
					</li>
                {{/each}}
			</ul>
		</div>
		<div class="profile-information">
            {{> (dynamic "profileMenu")}}
		</div>
	</div>
    {{!--These are used for breakpoint detection to hide menu on resize--}}
    <div id='js-is-mobile' class="is-mobile"></div>
    <div id='js-is-desktop' class="is-desktop"></div>
</div>
