<div id="js-body-overlay" class="body-overlay"></div>
<div class="hamburger-popout hamburger-contents hamburger-closed">
    <div class="menu-container">
        {{> (dynamic "button") buttonLink="/quickpost" i18nPath="header.postAd"}}

        {{#if this.header.profileName}}
            <div class="menu-profile">
                <div class="profile-icon icon-header-profile-out"></div>
                <div class="profile-welcome-text">
                    {{i18n "header.userDropdown.title"}}{{this.header.profileName}}!
                </div>
            </div>
        {{/if}}
        <div id="js-hamburger-browse" class="browse-categories">
            <div class="category-name">
                <div class="inline-block vertical-align-middle icon-grid-view-1"></div>
                <div class="inline-block vertical-align-middle">
                    Browse Categories
                </div>
            </div>
            <ul class="l0-categories">
                <li class="hidden">
                    <a href="/allCategories">
                        <div class="category-name">
                            All Categories
                        </div>
                    </a>
                </li>
            </ul>
            <ul class="l1-categories">
                {{#each this.categoryDropdown.children}}
                    <li class="hidden">
                        {{#unless this.children.length}}
                            <a href="{{this.localizedName}}">
                                <div class="category-name">
                                    {{this.localizedName}}
                                </div>
                            </a>
                        {{else}}
                            <div class="category-name">
                                {{this.localizedName}}
                            </div>
                        {{/unless}}
                        <ul id="{{this.localizedName}}" class="l2-categories">
                            {{#each this.children}}
                                <li>
                                    <a href="{{this.localizedName}}">
                                        <div class="l2-category category-name">
                                            {{this.localizedName}}
                                        </div>
                                    </a>
                                </li>
                            {{/each}}
                        </ul>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>
