<noscript>
	<style type="text/css">
		.jsOnly {display:none !important;}
		.nonJsOnlyInlineBlock{display:inline-block !important;}
		.nonJsOnlyBlock {display:block !important;}
		.nonJsOnlyInline {display:inline !important;}
	</style>
</noscript>
<div class="tab-content locations-wrapper">
	<div class="nonJsOnlyInline top-locations mobile-hide">
		<div class="jsOnly top-searches-header top-headers desktop-hide"><span class="top-headers-text search-header-text">{{i18n "home.popular-searches"}}</span></div>
		<div class="top-locations-header top-headers"><span class="top-headers-text location-header-text">{{i18n "footer.toplocations"}}</span></div>
        <div class="seo-line desktop-hide"></div>
        <div class="top-content-wrapper">
        {{#each this.topLocations}}
            {{#compare @index "<=" 5}}
				<div class="nonJsOnlyInline top-content">
					<a class="top-links" href="{{_links.[0].href}}">{{localizedName}}</a>
				</div>
            {{/compare}}
            {{#compare @index ">" 5}}
				<div class="nonJsOnlyInline hide top-content show-more-locations">
					<a class="top-links" href="{{_links.[0].href}}">{{localizedName}}</a>
				</div>
            {{/compare}}
        {{/each}}
		</div>
		<div class="jsOnly view-more-locations">{{i18n "home.viewmore"}}</div>
    </div>
</div>
