<div id="js-main-detail-edit" class="main-detail-edit">
    {{> (dynamic "shareAdCard") }}
	<div class="main-details-title">
        {{i18n "editAd.mainDetails.title"}}
	</div>
	<form id='edit-form' method="POST" action="#">
        <input id="location-lat" type="hidden" data-schema="data.location.latitude" name="locationLatitude" value="{{this.adResult.location.latitude}}">
        <input id="location-lng" type="hidden" data-schema="data.location.longitude" name="locationLongitude" value="{{this.adResult.location.longitude}}">
        <input type="hidden" name="adId" value="{{this.adId}}">
		<div class="form-category">
			<div class="label-wrapper">
				<label for="adCategory">{{i18n "editAd.mainDetails.labels.category"}}</label>
				<div class="suggested-cat">* {{i18n "editAd.mainDetails.suggestedCategory"}}</div>
                <div class="leaf-node-warning hidden">{{i18n "editAd.mainDetails.leafNodeWarning"}}</div>
			</div>
			<div class="input-wrapper">
				<div id="category-name-display" data-schema="data.categoryId" class="category-name-display"></div>
                <input id="category-id" value="{{this.adResult.categoryId}}" type="hidden" />
                {{> (dynamic "button") extraClasses='choose-category-button' iconName='' buttonLink="#" i18nPath="postad.contact.change"}}
			</div>
		</div>
		<div class="separator-div"></div>
		<div class="form-ad-title">
			<div class="label-wrapper">
				<label for="adTitle">{{i18n "editAd.mainDetails.labels.adTitle"}} ({{i18n "editAd.mainDetails.titleRestrictions.minimumAvailable"}}<span id="characters-available">100</span>{{i18n "editAd.mainDetails.titleRestrictions.characters"}})</label>
			</div>
			<div class="input-wrapper">
				<input title="adTitle" maxlength="100" data-schema="data.title" name="adTitle" type="text" value="{{this.adResult.title}}"/>
			</div>
		</div>
        <div class="form-ad-price {{#if this.isPriceExcluded}}hidden{{/if}}">
            <div class="label-wrapper">
                <label for="adPrice">{{i18n "editAd.mainDetails.labels.price"}}</label>
            </div>
            <div class="input-wrapper">
                <input title="adPrice" name="adPrice" data-schema="data.price.amount" data-validation="NUMBER" placeholder="{{i18n "editAd.mainDetails.askMe"}}" class="price-input"
                       value="{{#if this.adResult.price.amount}}{{this.adResult.price.amount}}{{/if}}"
                       type="text"/>
                <div class="radio-group" data-schema="data.price.currency">
                    <label class="control">
                        <input type="radio" name="currency" value="MXN" {{#ifeq this.adResult.price.currency compare='MXN'}}checked="checked"{{/ifeq}}/>
                        <div class="outer-circle">
                            <div class="inner-circle"></div>
                        </div>
                        <span class="currency-type">MXN</span>
                    </label>
                    <label class="control">
                        <input type="radio" name="currency" value="USD" {{#ifeq this.adResult.price.currency compare='USD'}}checked="checked"{{/ifeq}}/>
                        <div class="outer-circle">
                            <div class="inner-circle"></div>
                        </div>
                        <span class="currency-type">USD</span>
                    </label>
                </div>
            </div>
        </div>
		<div class="form-ad-description">
			<div class="label-wrapper">
				<label for="adDescription">{{i18n "editAd.mainDetails.labels.description"}}</label>
			</div>
			<div class="input-wrapper">
				<textarea id='description-input' data-schema="data.description" class="description-input" title="adDescription" maxlength="4000">{{{this.adResult.description}}}</textarea>
			</div>
		</div>
		<div class="separator-div"></div>
		<div class="form-location-selection">
			<div class="label-wrapper">
				<label for="adLocation">{{i18n "editAd.mainDetails.labels.location"}}</label>
			</div>
			<div class="input-wrapper">
				<div id="edit-location-input" role="link" class="location-link" data-default-location="{{i18n "location.defaultcity"}}">{{this.adResult.location.name}}</div>
			</div>
			<div class="location-warning">
				<div class="location-warning-text">
                    {{i18n "editAd.mainDetails.locationWarning"}}
				</div>
			</div>
		</div>
        <section id="custom-attributes">
            {{> (dynamic "editFormCustomAttributes") model=this}}
        </section>
		<div class="button-area">
            <div class="btn-area-inner">
				<div class="submit-btn-wrapper">
					<button id="js-edit-submit-button" class="edit-ad-submit" type="submit">{{i18n "editAd.mainDetails.submit"}}</button>
				</div>
				<div class="cancel-link-wrapper">
					<div class="cancel-form-link">
                        {{i18n "editAd.mainDetails.cancel"}}
					</div>
				</div>
            </div>
		</div>
	</form>
</div>

{{> (dynamic "modal")}}
<div id="client-hbs-locale" class="hidden" data-locale="{{locale}}"></div>


