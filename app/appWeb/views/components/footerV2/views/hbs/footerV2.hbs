    {{#if this.footerV2.distractionFree}}
        <div class="meet-team">{{i18n "footer.help.contact"}}</div>
        <div class="df-support-wrapper">
            <div class="df-support-container">
                <img class="support-icon" src="public/icons/icon_email.svg"/>
                <a class="support-text" href="#">{{i18n "footer.support.em"}}</a>
            </div>
            <div class="df-support-container">
                <img class="support-icon" src="public/icons/icon_call.svg"/>
                <a class="support-text" href="#">{{i18n "footer.support.ca"}}</a>
            </div>
            <div class="df-support-container">
                <img class="support-icon" src="public/icons/icon_chat.svg"/>
                <a class="support-text" href="#">{{i18n "footer.support.ch"}}</a>
            </div>
            <div class="clear"></div>
        </div>
        <div class="desktop-only line-divider"></div>
    {{/if}}


    {{#unless this.footerV2.distractionFree}}
        <div class="support-wrapper">
            <div class="support-container">
                <img class="support-icon" src="public/icons/icon_email.svg"/>
                <a class="mobile-only support-text" href="#">{{i18n "footer.help.sendemail"}}</a>
                <a class="desktop-only support-text" href="#">{{i18n "footer.support.em"}}</a>
            </div>
            <div class="support-container">
                <img class="support-icon" src="public/icons/icon_call.svg"/>
                <a class="mobile-only support-text" href="#">{{i18n "footer.help.callus"}}</a>
                <a class="desktop-only support-text" href="#">{{i18n "footer.support.ca"}}</a>
