        <div class="mobile-only social-container">
            <div class="social-icon-wrapper">
                <a href="#">
                    <div class="social-icon" style="background-image: url('public/icons/icon_social_facebook.svg');">
                    </div>
                </a>
            </div>
            <div class="social-icon-wrapper">
                <a href="#">
                    <div class="social-icon" style="background-image: url('public/icons/icon_social_twitter.svg');">
                    </div>
