                <a href="#">
                    <div class="social-icon" style="background-image: url('public/icons/icon_social_pinterest.svg');">
                    </div>
                </a>
            </div>
            <div class="social-icon-wrapper">
                <a href="#">
                    <div class="social-icon" style="background-image: url('public/icons/icon_social_youtube.svg');">
                    </div>
                </a>
            </div>
            <div class="social-icon-wrapper">
                <a href="#">
                    <div class="social-icon"
                         style="background-image: url('public/icons/icon_social_google_plus.svg');">
                    </div>
                </a>
            </div>
        </div>

        <div class="clear"></div>
        <div class="line-divider mobile-only"></div>

        <div class="footer-aboutus">
            <div class="menu-category"><span>{{i18n "footer.sitemap.aboutus.aboutus"}}</span>
                <img class="chevron mobile-only" src="/public/images/carousel-arrow-right.png"/>
                <div class="menu-items hide">
                    <div><a href="#">{{i18n "footer.sitemap.aboutus.aboutviva"}}</a></div>
                    <div><a href="#">{{i18n "footer.sitemap.aboutus.vivablog"}}</a></div>
