<div class="ad-details-container">
	<div class="pri-attrs">
        <div class="title-fav">
			<h1 class="item-title" {{#if this.advert.seoGroupName}} itemprop="name"{{/if}}>
				<span class="ad-title">{{this.advert.title}}</span>
                {{#if this.advert.isUrgent}}<span class="urgentBtn">{{i18n "feature.post.urgent"}}</span>{{/if}}
			</h1>
            {{#if this.advert.seoGroupName}}
				<meta itemprop="url" content="{{this.advert.seoVipUrl}}" />
            {{/if}}

            {{#if this.vip.showSellerStuff}}
                <div class="edit-favorite">{{i18n "vip.details.edit"}}
                    <a class="edit-favorite-icon edit-icon icon-vivaedit" href="{{this.advert.editUrl}}">
                    </a>
                </div>
            {{else}}
                <div class="edit-favorite">
                    <span class="edit-favorite-icon favorite-icon favorite-btn icon-heart-gray" role="button" data-adid="{{this.advert.adId}}" data-short-adid="{{this.advert.adId}}"></span>
                </div>
            {{/if}}
		</div>
        <div class="price-update">
			<div class="ad-price">{{this.advert.price.formattedAmount}}</div>
			<div class="ad-last-posted"><span>{{i18n "vip.details.posted"}} </span>{{this.advert.postedDate}} <span>{{i18n "vip.details.daysago"}}</span></div>
        </div>
        <div class="clear-line"></div>
        {{#if this.advert.orderedAttributes}}
			<div class="category-pri-attrs">
                {{#each this.advert.orderedAttributes}}
					<div class="pri-props">
						<span class="pri-props-name">{{this.capsName}}</span>
                        {{#if this.seoUrl}}
						    <a href="{{this.seoUrl}}"><span class="pri-props-value">{{this.value}}</span></a>
                        {{else}}
                            <span class="pri-props-value">{{this.value}}</span>
                        {{/if}}
					</div>
                {{/each}}
			</div>
			<div class="clear-line"></div>
        {{/if}}
	</div>
    <div class="sec-attrs">
        <div class="ad-description">{{{this.advert.description}}}</div>
        <div class="ad-category">
            <span class="category-attr">{{i18n "vip.details.category"}} </span>
            <div>
                {{#each this.advert.categoryPath}}
                    {{#compare @index ">" 0}}
                        <span><a href="{{this.href}}">{{this.localizedName}}</a></span>
                        <span class="slash-separator">/</span>
                    {{/compare}}
                {{/each}}
            </div>
        </div>
        <div class="ad-user-attrs">
            <div class="ad-location">
                <span class="location-attr">{{i18n "vip.details.location"}} </span>
                <div><a href="{{this.advert.locationDisplayHref}}">{{this.advert.locationDisplayName}}</a></div>
            </div>
            <div class="ad-last-updated"><span class="last-updated-attr">{{i18n "vip.details.updated"}} </span>
                <div>
                    {{#if this.advert.updatedDate}}
                        {{this.advert.updatedDate}} <span>{{i18n "vip.details.daysago"}}</span>
                    {{else}}
                        <span>-</span>
                    {{/if}}
                </div>
            </div>
            <div class="ad-posted-by"><span class="posted-by-attr">{{i18n "vip.details.postedby"}} </span><div>{{ this.advert.postedBy}}</div></div>
        </div>
    </div>
	<div class="clear-line"></div>
</div>
