<div class="ad-details-container">
	<div class="pri-attrs">
        <div class="title-fav">
		    <div class="ad-title">{{this.advert.adTitle}}</div>
            {{#if this.advert.isOwnerAd}}
				<div class="edit-favorite">{{i18n "vip.details.edit"}}<div class="edit-favorite-icon icon-apple-dark-gray"></div></div>
            {{else}}
				<div class="edit-favorite">{{i18n "vip.details.favorite"}}<div class="edit-favorite-icon icon-apple-dark-gray"></div></div>
            {{/if}}
		</div>
        <div class="price-update">
			<div class="ad-price">{{this.advert.price}}</div>
			<div class="ad-last-updated"><span>{{i18n "vip.details.posted"}} </span>{{this.advert.posted}}</div>
        </div>
        <div class="clear-line"></div>
        {{#if this.advert.displayMoreAttributes}}
            <div class="category-pri-attrs">
                {{#each this.advert.priAttributes}}
                    <div class="pri-props" id="desktop-pri-props">{{@key}} : {{this}}</div>
                {{/each}}
            </div>
        <div class="clear-line"></div>
        {{/if}}
	</div>
    <div class="sec-attrs">
        <div class="ad-description">{{this.advert.description}}<div class="ad-phone"> {{this.advert.phone}}</div></div>
        {{#if this.advert.isOwnerAd}}
			<div class="view-replies-count ad-desktop-only">
				<div class="ad-view-count">{{this.advert.viewCount}}<div class="views-text">{{i18n "vip.details.views"}}</div></div>
				<div class="ad-replies-count">{{this.advert.repliesCount}}<div class="replies-text">{{i18n "vip.details.replies"}}</div></div>
			</div>
        {{/if}}
		<div class="clear-line ad-mobile-only"></div>
        <div class="ad-category"><span class="category-attr">{{i18n "vip.details.category"}} </span><div>{{this.advert.category}}</div></div>
        <div class="ad-user-attrs">
            <div class="ad-location"><span class="location-attr">{{i18n "vip.details.location"}} </span><div>{{this.advert.location}}</div></div>
            <div class="ad-last-updated"><span class="last-updated-attr">{{i18n "vip.details.updated"}} </span><div>{{this.advert.lastUpdated}}</div></div>
            <div class="ad-posted-by"><span class="posted-by-attr">{{i18n "vip.details.postedby"}} </span><div>{{ this.advert.postedBy}}</div></div>
        </div>
    </div>
</div>
