{{#partial "content"}}
    {{> (dynamic "modal")}}

    {{> (dynamic "topBanner")}}
    
    
    <div class="status-ad-banner-desktop">
      {{!-- active, expired, pending, blocked, deleted --}}
        {{#compare  this.advert.status "===" 'expired'}}
          <div class="status-ad-banner">
            <span class="alert-icon"></span>
            <span>{{i18n "vip.details.expiredMessage"}}</span>
            {{#compare  this.header.id "===" this.advert.sellerDetails.id}}
              <a href="#">{{i18n "vip.details.activateNow"}}</a>
            {{/compare}}
          </div>
        {{/compare}}

        {{#compare  this.advert.status "===" 'pending'}}
          <div class="status-ad-banner">
            <span class="alert-icon"></span>
            <span>{{i18n "vip.details.pendingMessage"}}</span>
            {{#compare  this.header.id "===" this.advert.sellerDetails.id}}
              <a href="#">{{i18n "vip.details.learnMore"}}</a>
            {{/compare}}
          </div>
        {{/compare}}

        {{#compare  this.advert.status "===" 'blocked'}}
          <div class="status-ad-banner">
            <span class="alert-icon"></span>
            <span>{{i18n "vip.details.blockedMessage"}}</span>
            {{#compare  this.header.id "===" this.advert.sellerDetails.id}}
              <a href="#">{{i18n "vip.details.deletedStatus"}}</a>
            {{/compare}}
          </div>
        {{/compare}}

        {{#compare  this.advert.status "===" 'deleted'}}
          <div class="status-ad-banner">
            <span class="alert-icon"></span>
            <span>{{i18n "vip.details.deletedMessage"}}</span>
            {{#compare  this.header.id "===" this.advert.sellerDetails.id}}
              <a href="#">{{i18n "vip.details.statusReason"}}</a>
              and
              <a href="#">{{i18n "vip.details.deletedStatus"}}</a>
            {{/compare}}
          </div>
        {{/compare}}
    </div>


    <div class="vip-left-columns">
        <div id="viewPage">
            {{> (dynamic "viewPageGallery")}}

            <div class="item-details">
              {{> (dynamic "adDetails")}}
            </div>
        </div>

        {{#if this.vip.payWithShepherd}}
            <div>
                <span class="icon-shepherd-pay-button" data-target='_blank' data-gtm="pc|ShepherdClick"
                   data-uri="https://www.paywithshepherd.com/gumtree_buyer/buy_now?remote_url={{this.header.viewPageUrl}}"></span>
            </div>
        {{/if}}
    </div>

    <div class="vip-right-columns">
        <div class="seller-profile">
            {{> (dynamic "sellerProfile")}}
        </div>

        {{> (dynamic "adStats") }}
        {{#block "vip-adstats"}}{{/block}}

        <div class="reply-form">
            {{> (dynamic "replyForm")}}
        </div>

        <div class="google-maps">
            {{> (dynamic "gpsMap")}}
          {{#block "vip-map"}}{{/block}}
        </div>
    </div>

    {{> (dynamic "bottomBanner")}}

    {{#partial "welcomeModal"}}
        {{> (dynamic "welcomeModal")}}
    {{/partial}}

{{/partial}}


{{#partial "pageTailScripts"}}

	<script>
		var googleTagAccountMobId = "{{this.header.googleTagAccountMobId}}";
		var googleTagAccountId = "{{this.header.googleTagAccountId}}";
		var bP = {
            {{#ifMobile this.device}}
				accId: ("/" + googleTagAccountMobId + "/home").split(' ').join('_').replace(/\,|&_|'/g, ""),
            {{else}}
				accId: ("/" + googleTagAccountId + "/home").split(' ').join('_').replace(/\,|&_|'/g, ""),
            {{/ifMobile}}
			dc_ref: window.location.href,
			kw: $('input[name=q]').val() || $('input[name=title]').val() || "no category",
			loc: $('input[name=NlocName]').val(),
			ptype: 'VIP'
		};

        {{#block "googleBannerAdsBottom_Script"}}{{/block}}
	</script>
{{/partial}}
