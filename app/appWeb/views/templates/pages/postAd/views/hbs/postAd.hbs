{{#partial "headerWrapper"}}
    {{> (dynamic "headerV2")}}
{{/partial}}

{{#partial "content"}}
    {{> (dynamic "postAdModal")}}
    {{> (dynamic "uploadSuccessModal")}}

	<div class="post-ad-header">
        <span class="back-button">
            <span class="icon-caret-left-blue"></span>
            <span>{{i18n "postAd.confirm.back"}}</span>
        </span>
		<div class="header-text">
			<div>{{i18n "postAd.confirm.pageTitle"}}</div>
			<div class="header-accent">-</div>
		</div>
	</div>

	<div class="mobile-post-ad">
        {{> (dynamic "uploadImage")}}

		<div class="didKnow-text">{{i18n "postAd.confirm.didYouKnow"}}</div>
		<div class="confirm-tip">{{i18n "postAd.confirm.tip"}}</div>
	</div>
	<div class="desktop-post-ad margin-auto">
		<div class="directions">{{i18n "postAd.createAds.directions"}}</div>

        {{> (dynamic "postAdForm")}}

        <a href="/post-TBD" id="postAdBtn" class="post-ad-btn btn-wrapper disabled">
            <span class="link-text">{{i18n "postAd.createAds.post"}} {{i18n "postAd.createAds.ad"}}</span>
        </a>
	</div>

    {{> (dynamic "loginModal") isHidden=true}}
{{/partial}}

{{#partial "footerWrapper"}}
    {{> (dynamic "footerV2")}}
{{/partial}}
