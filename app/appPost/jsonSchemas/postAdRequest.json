{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",
	"required": true,
	"properties": {
		"ads": {
			"type": "array",
			"required": true,
			"items": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string",
						"maxLength": 25
					},
					"location": {
						"type": "object",
						"required": true,
						"properties": {
							"address": {
								"type": "string"
							},
							"latitude": {
								"type": "number",
								"required": true
							},
							"longitude": {
								"type": "number",
								"required": true
							}
						}
					},
					"price": {
						"type": "object",
						"properties": {
							"currency": {
								"type": "string"
							},
							"amount": {
								"type": "number"
							}
						}
					},
					"pictures": {
						"type": "array",
						"items": {
							"type": "string"
						}
					}
				}
			}
		}
	}
}
