# EditorConfig is awesome: http://EditorConfig.org
# this seeded from the example file, then modified to suit our needs

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space

# tabs, done as separate entries, comma separated not working for webstorm
[*.{json,xml,js}]
indent_style = tab

[.eslintrc]
indent_style = tab

